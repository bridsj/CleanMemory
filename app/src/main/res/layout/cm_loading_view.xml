<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/loading_icon"
        android:layout_width="@dimen/cm_loading_width_height"
        android:layout_height="@dimen/cm_loading_width_height"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/pick_loading_icon_big"/>

    <com.cleanmaster.notificationclean.view.CMLoadingSurface
        android:id="@+id/loading_progress_bar"
        android:layout_width="@dimen/cm_loading_width_height"
        android:layout_height="@dimen/cm_loading_width_height"
        android:layout_centerInParent="true"
        android:src="@drawable/pick_loading_circle_big"/>
</RelativeLayout>